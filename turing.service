[Unit]
Description=Turing 3.5" Monitor
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=5
WorkingDirectory=/INSTALL_DIR
ExecStart=/bin/bash -c 'source /INSTALL_DIR/.tssp/bin/activate && exec /INSTALL_DIR/.tssp/bin/python main.py'
StandardOutput=null
StandardError=null

[Install]
WantedBy=multi-user.target